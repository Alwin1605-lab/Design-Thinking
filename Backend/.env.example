# Copy to .env and fill the values
GROQ_API_KEY=
MONGODB_URI=mongodb://localhost:27017/GramaFix
JWT_SECRET=change_me_to_a_random_secret
SENDGRID_API_KEY=
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=

# n8n email notifications
ENABLE_N8N_EMAIL=false
N8N_EMAIL_WEBHOOK_URL=

# Firebase Cloud Messaging (HTTP v1) for push messages
ENABLE_FIREBASE_MESSAGING=false
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
FCM_DEFAULT_TOPIC=gramafix
# GramaFix Backend Environment Variables

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/GramaFix

# Groq API Configuration (for Whisper Speech-to-Text)
# Get your API key from: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# JWT Secret (for authentication tokens)
JWT_SECRET=your_random_secret_key_here

# Optional: Email Configuration (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key

# Optional: SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token

# Optional: Google Maps API
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
