# GramaFix Backend Environment Variables (copy to .env and fill values)

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/GramaFix

# Groq API Configuration (for Whisper Speech-to-Text and Chatbot)
# Get your API key from: https://console.groq.com/keys
GROQ_API_KEY=

# JWT Secret (for authentication tokens)
JWT_SECRET=

# CORS (comma-separated origins). Needed when allow_credentials=true
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Optional: Authenticator (TOTP)
TOTP_ISSUER=GramaFix
TOTP_INTERVAL=30
TOTP_DIGITS=6
TOTP_VALID_WINDOW=1
# Generate a stable key with: from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())
TOTP_ENCRYPTION_KEY=

# Optional: SMS Configuration (Twilio)
ENABLE_TWILIO_SMS=false
ENABLE_TWILIO_OTP=false
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=
# For local testing only; returns OTP in API if true and SMS disabled
DEBUG_OTP=false

# Optional: Google Maps API
GOOGLE_MAPS_API_KEY=

# Optional: S3 uploads
ENABLE_S3_UPLOADS=false
AWS_S3_BUCKET=
AWS_REGION=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Required keys checklist for main features:
# - GROQ_API_KEY (voice transcription and chatbot)
# - MONGODB_URI (database)
# - JWT_SECRET (auth tokens)
# - TOTP_ENCRYPTION_KEY (stable across restarts to keep TOTP secrets decryptable)
# - ENABLE_TWILIO_SMS/OTP + TWILIO_* (optional: SMS/OTP)
# - ENABLE_S3_UPLOADS + AWS_* (optional: cloud image storage)
